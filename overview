let activeTab = 0;

function render() {
  const tabsEl = document.getElementById('tabs');
  const contentEl = document.getElementById('content');
  const p = PHASES[activeTab];

  tabsEl.innerHTML = PHASES.map((ph, i) => 
    `<button class="tab-btn${i === activeTab ? ' active' : ''}" data-i="${i}" style="${i === activeTab ? `border-bottom-color:${ph.accent};color:${ph.accent}` : ''}">${ph.emoji} ${ph.phase}</button>`
  ).join('');

  let html = `
    <div style="margin-bottom:24px">
      <h2 class="phase-title" style="color:${p.accent}">${p.phase}</h2>
      <p class="phase-meta">${p.nights} ¬∑ ${p.dates}</p>
      <p class="phase-summary">${p.summary}</p>
    </div>
  `;

  p.categories.forEach((cat, ci) => {
    const id = `cat-${activeTab}-${ci}`;
    html += `
      <div class="cat" id="${id}">
        <div class="cat-header" data-id="${id}">
          <div class="cat-left">
            <span class="cat-icon">${cat.icon}</span>
            <span class="cat-label">${cat.label}</span>
            <span class="cat-count">${cat.items.length}</span>
          </div>
          <span class="cat-arrow">‚ñæ</span>
        </div>
        <div class="cat-body">
          ${cat.items.map((item, ii) => `
            <div class="item" style="${ii === 0 ? `border-top:1px solid ${p.color}22` : ''}">
              <div class="item-text">
                <p class="item-name">${item.name}</p>
                <p class="item-desc">${item.desc}</p>
              </div>
              <a href="${item.link}" target="_blank" rel="noopener noreferrer" class="item-link" style="color:${p.accent};border-color:${p.color}33">link ‚Üó</a>
            </div>
          `).join('')}
        </div>
      </div>
    `;
  });

  if (p.note) {
    html += `<div class="note" style="background:${p.note.bg};border:1px solid ${p.note.border}"><p>${p.note.text}</p></div>`;
  }

  contentEl.innerHTML = html;

  tabsEl.querySelectorAll('.tab-btn').forEach(btn => {
    btn.addEventListener('click', () => { activeTab = parseInt(btn.dataset.i); render(); });
  });

  contentEl.querySelectorAll('.cat-header').forEach(header => {
    header.addEventListener('click', () => {
      const cat = document.getElementById(header.dataset.id);
      cat.classList.toggle('open');
      if (cat.classList.contains('open')) {
        cat.style.borderColor = p.color + '55';
      } else {
        cat.style.borderColor = '#1a1d24';
      }
    });
  });
}

render();
</script>

</body>
</html>
